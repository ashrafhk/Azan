<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadsadiq.azaantest.Dashboard"
    android:background="@drawable/wallpaper2">


    <!--<com.google.android.gms.ads.AdView-->
    <!--android:id="@+id/ad_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--ads:adSize="BANNER"-->
    <!--ads:adUnitId="@string/banner_ad_unit_id"-->
    <!--android:foregroundGravity="top" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_v"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/textAdd"
            android:layout_width="234dp"
            android:layout_height="55dp"
            android:text="0"
            android:background="@drawable/bg_connt"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.80"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/CountAdd"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/counter_btn"
            android:foregroundGravity="center"
            android:layout_below="@+id/textAdd"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CounntAdd"
            android:layout_marginTop="30dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/restz"
                android:background="@drawable/refresh_button2"
                android:layout_marginRight="25dp" />

            <ImageButton
                android:id="@+id/addvibrator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:src="@drawable/ic_vibration"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
