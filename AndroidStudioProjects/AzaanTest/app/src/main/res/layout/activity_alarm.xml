<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    tools:context=".Alarm">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="26dp"
        app:button_background="@drawable/shape_button"
        app:button_image_disabled="@drawable/ic_alarm_on_black_24dp"
        app:button_image_enabled="@drawable/ic_alarm_off"
        app:button_bottom_padding="18dp"
        app:button_left_padding="18dp"
        app:button_right_padding="18dp"
        app:button_top_padding="18dp"
        app:inner_text="SWIPE TO OFF"
        app:inner_text_background="@drawable/shape_rounded"
        app:inner_text_bottom_padding="20dp"
        app:inner_text_color="@color/colorWhite"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="20dp"
        style="@style/AppTheme.SwipeButton"
        >

    </com.ebanx.swipebtn.SwipeButton>

    <at.markushi.ui.CircleButton
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/ic_alarm"
        app:cb_color="@color/colorGreen"
        android:layout_centerInParent="true"
        app:cb_pressedRingWidth="8dip" />

</RelativeLayout>

